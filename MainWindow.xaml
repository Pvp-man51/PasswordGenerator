<Window x:Class="RandomPasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomPasswordGenerator"
        mc:Ignorable="d"
        Title="Password Generator" Height="300" Width="480"
        ResizeMode="CanMinimize" 
        Icon="/Icon.ico">

    <Grid Background="#FF1F1F1F">
        <Label x:Name="Titel" Margin="72,10,72,203" Foreground="White" FontFamily="Calibri" FontSize="16" FontWeight="Bold">This will generate a 12 Symbols Long Password</Label>
        <Button x:Name="button" Margin="240,45,10,117" FontFamily="Calibri" FontSize="16" FontWeight="Bold" Foreground="White" BorderBrush="Black" Background="#FF363636" Cursor="Hand" Click="Button_Click">Generate Password</Button>
        <TextBlock x:Name="textBox" Margin="10,45,245,117" FontFamily="Calibri" TextAlignment="Center" FontSize="16" Foreground="White" Background="#FF363636">The password will appear here</TextBlock>
        <Button x:Name="copyButton" Margin="127,172,127,60" FontFamily="Calibri" FontSize="16" FontWeight="Bold" Background="#FF363636" Foreground="White" BorderBrush="Black" Cursor="Hand" Click="CopyButton_Click">Copy To Clipboard</Button>
    </Grid>
</Window>
